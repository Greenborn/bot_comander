{
  "name": "bot_comander",
  "version": "1.0.0",
  "description": "Sistema de control y monitoreo de bots a trav√©s de WebSockets en tiempo real.",
  "main": "backend/src/index.js",
  "type": "module",
  "scripts": {
    "test": "node test/test_bots.js",
    "test:bots": "node test/test_bots.js",
    "setup-auth": "node scripts/setup-auth.js",
    "register-bot": "node scripts/manage-bot-keys.js register",
    "list-bots": "node scripts/manage-bot-keys.js list",
    "deactivate-bot": "node scripts/manage-bot-keys.js deactivate",
    "reactivate-bot": "node scripts/manage-bot-keys.js reactivate",
    "delete-bot": "node scripts/manage-bot-keys.js delete",
    "dev": "npm run dev:parallel",
    "dev:parallel": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "start": "npm run start:production",
    "start:production": "SERVE_FRONTEND_MODE=production cd backend && npm start",
    "start:development": "SERVE_FRONTEND_MODE=development cd backend && npm start",
    "build": "cd frontend && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Greenborn/bot_comander.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Greenborn/bot_comander/issues"
  },
  "homepage": "https://github.com/Greenborn/bot_comander#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "multer": "^2.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
